<!DOCTYPE html>
<html lang="es">
<head>
    <%- include('./partials/head.ejs') %> 
</head>
<body>
    <div class="container-fluid px-0 body-login">
        <div class="container-logo-inputs col-6 d-flex flex-column justify-content-center py-auto">
            <div class="d-flex flex-row justify-content-between align-items-start col-12 mx-auto">
                <div class="container-login-signup mx-auto d-flex flex-row justify-content-start mb-5 col-5">
                    <h2 class="text-bold text-white">Inicio de sesión</h2>
                </div>
                <div class="container-login-inputs d-flex flex-column justify-content-start align-items-end col-6">
                    <form action="/login" method="POST" class="col-12">
                        <!-- email -->
                        <div class="d-flex flex-column justify-content-start align-items-start col-12">
                            <span class="input-span">Correo electrónico</span>
                            <input type="email" name="email" placeholder="Correo electrónico" class="col-12 mx-auto mt-1 mb-2" value="<%= typeof old != 'undefined' ? old.email : '' %>"> 
                            <% if(typeof errors != 'undefined' && errors.email){%>
                                <span class="text-danger" > <%=errors.email.msg %></span>
                            <%}%>
                        </div>
                        <!-- password -->
                        <div class="d-flex flex-column justify-content-start align-items-start col-12">
                            <span class="input-span">Contraseña</span>
                            <input type="password" name="password" placeholder="Contraseña" class="col-12 mx-auto mt-1 my-2">
                            <% if(typeof errors != 'undefined' && errors.password){%>
                                <span class="text-danger" > <%=errors.password.msg %></span>
                            <%}%>
                        </div>
                        <!-- Remember me -->
                        <div class="col-12 d-flex flex-row justify-content-end align-items-center">
                            <input class="col-1" type="checkbox" id="blankCheckbox" value="option1" aria-label="..." name="remember">
                            <p class="m-0 remember-text">Recordarme</p>
                        </div>
                        <!-- volver, login -->
                        <div class="col-12 d-flex flex-row justify-content-around align-items-end">
                            <a href="/" class="login-signup-back col-6">Volver</a>
                            <!-- Submit registration -->
                            <button type="submit" class="mt-3 mb-0 btn btn-outline-light col-6">Iniciar sesión</button>
                        </div>
                    </form>
                </div>
            </div>
            
        </div>
    </div>
    <!-- Bootstrap js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
</body>
</html>
