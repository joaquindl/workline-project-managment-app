<div id="modal-user-edit">
    <form action="/user/edit/<%= locals.usuario.id %>?_method=PUT" method="POST">
        <div id="edit-user-content">
            <div class="modal-title">
                <p>Editar usuario</p>
            </div>
            <!-- Name -->
            <div class="d-flex flex-column justify-content-start align-items-start col-9 mx-auto mt-4">
                <span class="edit-input-span">Nombre</span>
                <input type="hidden" name="oldName" value="<%= locals.usuario.name %>">
                <input type="text" placeholder="Nombre" name="name" value="<%= locals.usuario.name %>" class="new-modal-inputs mb-3 mt-1">
                <% if(typeof errors != 'undefined' && errors.name){%>
                    <span class="text-danger" > <%=errors.name.msg %></span>
                <%}%>
            </div>
            <!-- Lastname -->
            <div class="d-flex flex-column justify-content-start align-items-start col-9 mx-auto">
                <span class="edit-input-span">Apellido</span>
                <input type="hidden" name="oldLastName" value="<%= locals.usuario.lastName %>">
                <input type="text" placeholder="Apellido" name="lastName" value="<%= locals.usuario.lastName %>" class="new-modal-inputs mb-3 mt-1">
                <% if(typeof errors != 'undefined' && errors.lastName){%>
                    <span class="text-danger" > <%=errors.lastName.msg %></span>
                <%}%>
            </div>
            <!-- Email -->
            <div class="d-flex flex-column justify-content-start align-items-start col-9 mx-auto">
                <span class="edit-input-span">Correo electrónico</span>
                <input type="hidden" name="oldEmail" value="<%= locals.usuario.email %>">
                <input type="email" placeholder="Email" name="email" value="<%= locals.usuario.email %>" class="new-modal-inputs mb-3 mt-1">
                <% if(typeof errors != 'undefined' && errors.email){%>
                    <span class="text-danger" > <%=errors.email.msg %></span>
                <%}%>
            </div>
            <!-- Cambiar contraseña -->
            <div class="w-100 mt-3 text-center">
                <div id="new-task-title" class="d-flex flex-row justify-content-start align-items-center edit-password-btn">
                    <p>Cambiar contraseña</p>
                </div>
                <div id="input-tasks-container">
                    <div id="edit-password-inputs">
                        <!-- Contraseña vieja -->
                        <div class="d-flex flex-column justify-content-start align-items-start col-9 mt-2 mx-auto">
                            <span class="edit-input-span">Antigua Contraseña</span>
                            <input type="password" name="old_password" placeholder="Contraseña" class="col-12 mx-auto mt-1 my-2 new-modal-inputs">
                            <% if(typeof errors != 'undefined' && errors.old_password){%>
                                <span class="text-danger" > <%=errors.old_password.msg %></span>
                            <%}%> 
                        </div>

                        <!-- Contraseña -->
                        <div class="d-flex flex-column justify-content-start align-items-start col-9 mt-2 mx-auto">
                            <span class="edit-input-span">Contraseña</span>
                            <input type="hidden" name="oldPassword" value="<%= locals.usuario.password %>">
                            <input type="password" name="password" placeholder="Contraseña" class="col-12 mx-auto mt-1 my-2 new-modal-inputs">
                            <% if(typeof errors != 'undefined' && errors.password){%>
                                <span class="text-danger" > <%=errors.password.msg %></span>
                            <%}%> 
                        </div>
                        
                        <!-- Confirmar contraseña -->
                        <div class="d-flex flex-column justify-content-start align-items-start col-9 mt-2 mx-auto">
                            <span class="edit-input-span">Confirmar contraseña</span>
                            <input type="password" name="confirmPassword" placeholder="Contraseña" class="col-12 mx-auto mt-1 my-2 new-modal-inputs">
                            <% if(typeof errors != 'undefined' && errors.confirmPassword){%>
                                <span class="text-danger" > <%=errors.confirmPassword.msg %></span>
                            <%}%>
                        </div>
                    </div>
                </div>
                
            </div>
            <div class="modal-btn-container d-flex flex-row justify-content-center">
                <button class="btn btn-dark modal-submit-btn" type="submit">Guardar cambios</button>
            </div>
            <div class="d-flex flex-row justify-content-center">
                <a href="/" id="cancel-anchor">Cancelar</a>
            </div>
            
        </div>
    </form>
</div>